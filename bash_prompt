# Prompt

BRANCH="\$(git branch 2>/dev/null | grep -e '\*' | sed 's/^..\(.*\)/\\[\\033[47;30m\\]\\[⭠ \\]\1 \\[\\033[40;37m\\]⮀/')"

export PS1="\n${BRANCH}\[\033[40;32m\] \u ⮁ \h \[\033[49;30m\]⮀ \[\033[49;34m\]\w \[\033[49;37m\]\n\n\[\033[49;1;33m\] ⚡ \[\033[0m\]"
export PS2="\[\033[49;1;33m\] ❯ \[\033[0m\]"
